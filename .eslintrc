{
  "extends": [
    "airbnb"
  ],
  "settings": {
    "import/core-modules": []
  },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "max-len": [
      "warn", 120, 2, {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "graphql": false,
    "WebFont": false
  }
}
